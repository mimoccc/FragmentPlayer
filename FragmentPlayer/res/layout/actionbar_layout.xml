<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar"
    android:layout_width="fill_parent"
    android:layout_height="44.88dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/barback"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageButton
                android:id="@+id/menu_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_list_bullets" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/menu_btn"
                android:background="#ffffff"
                android:orientation="vertical" >
            </LinearLayout>

            <ImageView
                android:id="@+id/helpbutton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="#55343434"
                android:src="@drawable/help" />

        </RelativeLayout>
        <!--
              <ImageView android:id="@+id/img_logo" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_weight="0"
			android:scaleType="fitStart" android:adjustViewBounds="true"
			android:src="@drawable/toplogo" />
        -->


        <!-- dummy blank -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#00000000" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.66dp"
        android:layout_weight="0"
        android:background="#1B100A" />

</LinearLayout>